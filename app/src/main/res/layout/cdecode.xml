<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/white"
	android:fitsSystemWindows="true"
    android:clipToPadding="false">
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:scrollbars="none">
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:gravity="center_vertical"
				android:paddingTop="@dimen/title_height"
				android:paddingBottom="85dp">
				<EditText
					android:id="@+id/CodeEdt"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp"
					android:hint="请输入文本内容，支持文字和网址"
					android:maxLength="1000"
					android:minLines="1"
					android:maxLines="5"
					android:minHeight="45dp"
					android:maxHeight="100dp"
					android:background="@drawable/ui_vcode"
					android:paddingLeft="8dp"
					android:layout_marginTop="3dp"
					android:layout_marginBottom="5dp"/>
				<ImageView
					android:id="@+id/test_iv"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:gravity="center"/>

			</LinearLayout>
		</ScrollView>
		<LinearLayout
			android:id="@+id/themeLayout"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/title_height"
			android:layout_alignParentTop="true"
			android:orientation="horizontal"
			android:background="@color/title">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_icon"
				android:layout_gravity="center_vertical">

			</ImageView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="left|center_vertical"
				android:text="@string/cdecode"
				android:textColor="#Ffffff"
				android:textSize="22sp"
				android:layout_weight="1.0"
				android:paddingLeft="10dp"
				android:layout_gravity="center_vertical">

			</TextView>

			<ImageButton
				android:id="@+id/btn_close"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/bg_btn_close"
				android:layout_gravity="right|center_vertical"
				android:gravity="right"
				android:background="@null"
				android:adjustViewBounds="true"
				android:paddingRight="10dp">

			</ImageButton>

		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:orientation="vertical">
			<TextView
				android:id="@+id/cdecode_testText"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/black"/>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:orientation="horizontal"
				android:paddingLeft="5dp"
				android:paddingRight="5dp">
				<CheckBox
					android:id="@+id/chkLocked"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:background="@drawable/ui_checkbox"
					android:button="@null"
					android:gravity="center"/>
				<TextView
					android:id="@+id/cde_textPsd"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:layout_margin="5dp"
					android:background="@drawable/ui_textpress"
					android:text="数据加密"
					android:paddingLeft="1dp"
					android:gravity="center_vertical"/>
				<LinearLayout
					android:id="@+id/cde_pwdlayout"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="horizontal"
					android:background="@drawable/ui_pwdlayout"
					android:visibility="visible"
					android:paddingRight="4dp">
				<EditText
					android:id="@+id/cde_txtPsd"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:paddingLeft="4dp"
					android:inputType="textPassword"
					android:hint="@string/input_psd"
					android:maxLength="16"
					android:background="@null"/>
				<CheckBox
					android:id="@+id/chkPassword"
					android:layout_width="42dp"
					android:layout_height="30dp"
					android:layout_weight="1"
					android:layout_gravity="center_vertical"
					android:background="@drawable/ui_pwdstate"
					android:button="@null"
					android:gravity="center"/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:orientation="horizontal">

				<Button
					android:id="@+id/btn_ResultCode"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="14sp"
					android:text="@string/dc_create"
					android:textColor="@color/black"
					android:background="@drawable/bg_btn_options"/>

				<TextView
					android:layout_width="1dp"
					android:layout_height="fill_parent"
					android:background="@null"/>
				<Button
					android:id="@+id/btn_codeColor"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="14sp"
					android:text="@string/dc_color"
					android:background="@drawable/bg_btn_options"
					android:textColor="@color/black"/>
				<TextView
					android:layout_width="1dp"
					android:layout_height="fill_parent"
					android:background="@null"/>
				<Button
					android:id="@+id/btn_copyCode"
					android:layout_width="0dp"
					android:layout_height="fill_parent"
					android:layout_weight="0"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="14sp"
					android:text="@string/dc_copy"
					android:background="@drawable/bg_btn_options"
					android:textColor="@color/black"/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="fill_parent"
					android:background="@null"/>
				<Button
					android:id="@+id/btn_SaveCode"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:layout_gravity="center"
					android:gravity="center"
					android:textSize="14sp"
					android:text="@string/dc_save"
					android:background="@drawable/bg_btn_options"
					android:textColor="@color/black"/>

			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>

