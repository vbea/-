<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:gravity="center">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="20dp">

		<LinearLayout
			android:id="@+id/wel3_lin"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_centerInParent="true"
			android:layout_weight="1"
			android:gravity="center_horizontal|bottom"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/wel3_img1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/welcome_03"
				android:background="#CCCCCC"
				android:visibility="invisible"/>
			<ImageView
				android:id="@+id/wel3_img2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/welcome_04"
				android:background="#CCCCCC"
				android:visibility="invisible"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center_horizontal|top"
			android:layout_toEndOf="@id/wel3_lin"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/wel3_img3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/welcome_05"
				android:background="#CCCCCC"
				android:visibility="invisible"/>
			<ImageView
				android:id="@+id/wel3_img4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/welcome_06"
				android:background="#CCCCCC"
				android:visibility="invisible"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center_horizontal|top"
			android:orientation="vertical">
		<TextView
			android:id="@+id/wel3_txt1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="40dp"
			android:text="全新通讯录"
			android:textSize="20sp"
			android:textColor="@color/black"
			android:visibility="invisible"/>
		<TextView
			android:id="@+id/wel3_txt2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="30dp"
			android:layout_marginBottom="20dp"
			android:text="新界面 新功能"
			android:textSize="20sp"
			android:textColor="@color/black"
			android:visibility="invisible"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

