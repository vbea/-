<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/background"
	android:fitsSystemWindows="true"
	android:clipToPadding="false">
	<LinearLayout
		android:id="@+id/themeLayout"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/title_height"
		android:orientation="horizontal"
		android:background="@color/title">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_icon"
			android:layout_gravity="center_vertical"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="left|center_vertical"
			android:text="@string/bm_bmi"
			android:textColor="@color/white"
			android:textSize="22sp"
			android:layout_weight="1.0"
			android:paddingLeft="10dp"
			android:layout_gravity="center_vertical"/>
		<ImageButton
			android:id="@+id/btn_close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/bg_btn_close"
			android:layout_gravity="right|center_vertical"
			android:gravity="right"
			android:background="@null"
			android:adjustViewBounds="true"
			android:paddingRight="10dp"/>
	</LinearLayout>

	<LinearLayout
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:orientation="vertical"
		android:padding="10dp">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:background="@drawable/ui_editext"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="5dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18sp"
				android:text="@string/bm_height"
				android:textColor="@color/black"/>
			<EditText
				android:id="@+id/bm_txtHeight"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:hint="@string/bm_hheight"
				android:textSize="20sp"
				android:textColor="@color/black"
				android:background="@null"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:inputType="numberDecimal"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:background="@drawable/ui_editext"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="5dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18sp"
				android:text="@string/bm_weight"
				android:textColor="@color/black"/>
			<EditText
				android:id="@+id/bm_txtWeight"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:hint="@string/bm_hweight"
				android:textSize="20sp"
				android:textColor="@color/black"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:inputType="numberDecimal"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:paddingLeft="10dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18sp"
				android:text="@string/bm_gender"
				android:textColor="@color/black"/>
			<Spinner
				android:id="@+id/bm_Spinner"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:textSize="20sp"
				android:textColor="@color/black"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"/>
			<Button
				android:id="@+id/bm_btnbmi"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:background="@drawable/bg_btn_dialog"
				android:text="@string/bm_calcul"
				android:padding="10dp"
				android:textSize="18sp"
				android:textColor="#007777"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="2dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18sp"
				android:text="@string/bm_value"
				android:textColor="@color/black"/>
			<TextView
				android:id="@+id/bm_bmiValue"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18sp"
				android:text="0"
				android:textColor="#666666"/>
			<TextView
				android:id="@+id/bm_bmType"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:textSize="18sp"
				android:text=""
				android:textColor="@color/black"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="2dp"
			android:orientation="vertical"
			android:gravity="center_vertical">
			<ProgressBar
				android:id="@+id/bm_progress"
				android:layout_width="fill_parent"
				android:layout_height="15dp"
				style="?android:attr/progressBarStyleHorizontal"
				android:progressDrawable="@drawable/bm_progress"
				android:max="100"
				android:progress="0"
				android:secondaryProgress="0"/>
			<TextView
				android:id="@+id/bm_tips"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:textSize="18sp"
				android:text=""
				android:textColor="@color/black"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>

