<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:background="@drawable/background"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
    android:clipToPadding="false">

	<TextView
		android:id="@+id/txt_nouse"
		android:layout_width="1dp"
		android:layout_height="5dp"/>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:paddingTop="@dimen/title_height">

		<Button
			android:id="@+id/xd_btn_netnull"
			android:layout_width="fill_parent"
			android:layout_height="38dp"
			android:background="#FFE678"
			android:text="世界上最遥远的距离就是没网，检查设置"
			android:drawableRight="@drawable/into_arr_a"
			android:textSize="14sp"
			android:padding="5dp"
			android:gravity="left|center_vertical"
			android:visibility="gone"/>

		<ScrollView
			android:id="@+id/scl_msg"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_marginBottom="52dp">

			<LinearLayout
				android:id="@+id/msgAdapter"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:padding="5dp">

			</LinearLayout>

		</ScrollView>

	</LinearLayout>

	<LinearLayout
		android:background="#FFFFFF"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="0dp"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		android:gravity="center">

		<EditText
			android:id="@+id/txtEdit"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:minHeight="40dp"
			android:maxHeight="100dp"
			android:layout_weight="1"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:layout_marginLeft="5dp"
			android:maxLines="5"
			android:hint="跟我聊聊吧"
			android:background="@drawable/ui_editext"
			android:paddingLeft="6dp"/>

		<Button
			android:id="@+id/btnSend"
			android:background="@drawable/bg_btn_send"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:layout_margin="5dp"
			android:layout_weight="4"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:textSize="16sp"
			android:text="@string/send"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/themeLayout"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/title_height"
		android:layout_alignParentTop="true"
		android:orientation="horizontal"
		android:background="@color/title">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_icon"
			android:layout_gravity="center_vertical">

		</ImageView>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="left|center_vertical"
			android:text="@string/ct_xidai"
			android:textColor="#Ffffff"
			android:textSize="22sp"
			android:layout_weight="1.0"
			android:paddingLeft="10dp"
			android:layout_gravity="center_vertical">

		</TextView>

		<ImageButton
			android:id="@+id/btn_close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/bg_btn_close"
			android:layout_gravity="right|center_vertical"
			android:gravity="right"
			android:background="@null"
			android:adjustViewBounds="true"
			android:paddingRight="10dp">

		</ImageButton>

	</LinearLayout>

</RelativeLayout>

