<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:background="@drawable/background"
	android:fitsSystemWindows="true"
    android:clipToPadding="false">
	<TextView
		android:id="@+id/file_hidden"
		android:layout_gravity="right"
		android:layout_width="wrap_content"
		android:layout_height="0dp"/>
	<LinearLayout
		android:id="@+id/themeLayout"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/title_height"
		android:layout_alignParentTop="true"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:background="@color/title">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:src="@drawable/ic_icon"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/files"
			android:textColor="#Ffffff"
			android:textSize="22sp"
			android:singleLine="true"/>

		<ImageButton
			android:id="@+id/btn_fileopt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/bg_btn_title"
			android:layout_gravity="right|center_vertical"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:adjustViewBounds="true"
			android:paddingRight="10dp"/>

	</LinearLayout>
	<TextView 
		android:id="@+id/file_textPath"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="14sp"
		android:textColor="#707070"
		android:background="#7FEEEEEE"
		android:gravity="center_vertical"
		android:lines="2"/>
	<ListView
		android:id="@+id/file_listView"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:focusable="true"
		android:fastScrollEnabled="false">
	</ListView>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<!--粘贴菜单-->
		<LinearLayout
			android:id="@+id/file_copyBar"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:orientation="horizontal"
			android:visibility="gone">
			<Button
				android:id="@+id/btn_filePaste"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/bg_btn_options"
				android:layout_weight="1"
				android:textColor="@color/black"
				android:textSize="15sp"
				android:text="@string/paste"/>
			<Button
				android:id="@+id/btn_cancelPaste"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/bg_btn_options"
				android:layout_weight="1"
				android:textColor="@color/black"
				android:textSize="15sp"
				android:text="@string/cancel"/>
		</LinearLayout>
		<!--多选菜单-->
		<LinearLayout
			android:id="@+id/file_selectBar"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:orientation="horizontal"
			android:visibility="visible">
			<Button
				android:id="@+id/btn_fileSelectAll"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/bg_btn_options"
				android:layout_weight="1"
				android:textColor="@color/black"
				android:textSize="15sp"
				android:singleLine="true"
				android:text="@string/check_all"/>
			<Button
				android:id="@+id/btn_fileSelecToggle"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/bg_btn_options"
				android:layout_weight="1"
				android:textColor="@color/black"
				android:textSize="15sp"
				android:singleLine="true"
				android:text="@string/check_turn"/>
			<Button
				android:id="@+id/btn_selectCopy"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/bg_btn_options"
				android:layout_weight="1"
				android:textColor="@color/black"
				android:textSize="15sp"
				android:singleLine="true"
				android:text="@string/dc_copy"/>
			<Button
				android:id="@+id/btn_selectCut"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/bg_btn_options"
				android:layout_weight="1"
				android:textColor="@color/black"
				android:textSize="15sp"
				android:singleLine="true"
				android:text="@string/cut"/>
			<Button
				android:id="@+id/btn_selectDelete"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/bg_btn_options"
				android:layout_weight="1"
				android:textColor="@color/black"
				android:textSize="15sp"
				android:singleLine="true"
				android:text="@string/delete"/>
			<Button
				android:id="@+id/btn_selectMore"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/bg_btn_options"
				android:layout_weight="1"
				android:textColor="@color/black"
				android:textSize="15sp"
				android:singleLine="true"
				android:text="@string/more"/>
			<Button
				android:id="@+id/btn_selectCancel"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/bg_btn_options"
				android:layout_weight="1"
				android:textColor="@color/black"
				android:textSize="15sp"
				android:singleLine="true"
				android:text="@string/cancel"/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>

