<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<gradient
				android:startColor="#3399ff" 
				android:endColor="#3399ff"
				android:angle="270"/>
			<stroke android:width="1dp" android:color="#eeeeee"/>
			<corners android:radius="2dp"/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#66bbff" 
				android:endColor="#66BBFF"
				android:angle="270"/>
			<stroke android:width="1dp" android:color="#eeeeee"/>
			<corners android:radius="2dp"/>
		</shape>
	</item>
</selector>
